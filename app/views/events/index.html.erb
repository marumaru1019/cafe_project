<p id="notice"><%= notice %></p>

<h1><%= t 'index.name' %></h1>

  <div class = "js-events">
    <% @events.each do |event| %>
      <div class="slider">
        <%= image_tag event.image %>
      </div>
    <% end %>
  </div>

<table>
  <thead>
    <tr>
      <th><%= t('index.name')  %></th>
      <th>Date</th>
      <th>Time</th>
      <th>Recommend menu</th>
      <th>Place</th>
      <th>Max num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= l event.date, format: :full_date_except_year %></td>
        <td><%= event.time_table.time %></td>
        <td><%= event.recommend_menu %></td>
        <td><%= event.place %></td>
        <td><%= event.max_num %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= @day %>
