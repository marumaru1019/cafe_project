<%= render 'shared/notice' %>
<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model:@user_request, local:true do |f| %>

  <h4>カテゴリー</h4>
  <%= f.select :user_request_tag_id, options_for_select(@user_request_tags.map{|tag| [tag[:tag_name], tag[:id]]}) %>

  <h4>本文</h4>
  <%= f.text_area :text %>

  <h4>確認メールを送信しますか？</h4>
  <%= f.check_box :confirm %>

  <%= f.submit '投稿' %>

<% end %>